APP_NAME="NAT VPS Manager"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nat_vps_manager
DB_USERNAME=root
DB_PASSWORD=

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=file

# Queue (optional - for background jobs)
QUEUE_CONNECTION=sync

# Filesystem
FILESYSTEM_DISK=local

# Mail Configuration (optional - can be configured in Admin Settings)
# These are fallback values if not configured in database
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Vite
VITE_APP_NAME="${APP_NAME}"

# VPS Console Access Configuration
# WebSocket proxy settings
CONSOLE_WEBSOCKET_SECURE=true
CONSOLE_WEBSOCKET_PROXY_HOST=
CONSOLE_VNC_PROXY_PORT=6080
CONSOLE_SSH_PROXY_PORT=2222

# Connection timeouts (in seconds)
CONSOLE_CONNECTION_TIMEOUT=30
CONSOLE_IDLE_TIMEOUT=1800
CONSOLE_KEEPALIVE_INTERVAL=30

# Security settings
CONSOLE_TOKEN_TTL=5
CONSOLE_MAX_SESSIONS=3

# VNC settings
CONSOLE_VNC_SCALING=fit
CONSOLE_VNC_CLIPBOARD=true
CONSOLE_VNC_QUALITY=6
CONSOLE_VNC_COMPRESSION=2

# SSH settings
CONSOLE_SSH_TERM=xterm-256color
CONSOLE_SSH_COLS=80
CONSOLE_SSH_ROWS=24

# Websockify Proxy Configuration
# Enable/disable websockify proxy
WEBSOCKIFY_ENABLED=true
# Internal host where websockify is running
WEBSOCKIFY_HOST=127.0.0.1
# VNC proxy port
WEBSOCKIFY_VNC_PORT=6080
# SSH proxy port
WEBSOCKIFY_SSH_PORT=2222
# Public host for client connections (leave empty to use internal host)
WEBSOCKIFY_PUBLIC_HOST=

# Websockify SSL/TLS Configuration (Required for production - Requirement 6.1)
# Set to false for local development without SSL
WEBSOCKIFY_SSL_ENABLED=false
WEBSOCKIFY_SSL_CERT=/etc/ssl/certs/websockify.crt
WEBSOCKIFY_SSL_KEY=/etc/ssl/private/websockify.key
WEBSOCKIFY_SSL_CA=
WEBSOCKIFY_SSL_VERIFY=true

# Websockify Connection Settings
WEBSOCKIFY_TIMEOUT=30
WEBSOCKIFY_IDLE_TIMEOUT=1800
WEBSOCKIFY_MAX_CONNECTIONS=100
WEBSOCKIFY_HEARTBEAT=true
WEBSOCKIFY_HEARTBEAT_INTERVAL=30

# Websockify Target Mapping
WEBSOCKIFY_USE_TOKENS=true
WEBSOCKIFY_TOKEN_FILE=
WEBSOCKIFY_TOKEN_PLUGIN=
WEBSOCKIFY_DEFAULT_HOST=
WEBSOCKIFY_DEFAULT_PORT=5900

# Websockify Logging
WEBSOCKIFY_VERBOSE=false
WEBSOCKIFY_LOG_LEVEL=info

# SSH WebSocket Proxy Configuration
# Enable/disable SSH proxy
SSH_PROXY_ENABLED=true
# SSH proxy type: 'wetty', 'ttyd', 'custom'
SSH_PROXY_TYPE=custom
# SSH proxy host
SSH_PROXY_HOST=127.0.0.1
# SSH proxy port
SSH_PROXY_PORT=2222
# Public host for SSH proxy (leave empty to use WEBSOCKIFY_PUBLIC_HOST)
SSH_PROXY_PUBLIC_HOST=
# SSH proxy base path
SSH_PROXY_BASE_PATH=/ssh
# Use SSL for SSH proxy
SSH_PROXY_SSL=true