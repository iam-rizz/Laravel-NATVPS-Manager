APP_NAME="NAT VPS Manager"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nat_vps_manager
DB_USERNAME=root
DB_PASSWORD=

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=file

# Queue (optional - for background jobs)
QUEUE_CONNECTION=sync

# Filesystem
FILESYSTEM_DISK=local

# Mail Configuration (optional - can be configured in Admin Settings)
# These are fallback values if not configured in database
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Vite
VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# Console Proxy Configuration
# =============================================================================
# Unified WebSocket proxy for VNC and SSH connections.
# Used by: scripts/console-proxy/server.js
#
# HOSTING OPTIONS:
# 
# 1. VPS/Dedicated Server (recommended):
#    - Run console-proxy on same server: cd scripts/console-proxy && npm start
#    - Configure Nginx/Apache reverse proxy for /websockify and /ssh
#    - Set CONSOLE_PROXY_PUBLIC_HOST to your domain
#
# 2. Shared Hosting (limited):
#    - Cannot run Node.js process on shared hosting
#    - Option A: Deploy console-proxy on separate VPS and set CONSOLE_PROXY_PUBLIC_HOST
#    - Option B: Disable console feature with CONSOLE_PROXY_ENABLED=false
#
# 3. External Console Proxy:
#    - Deploy console-proxy on any VPS (even cheap NAT VPS works)
#    - Set CONSOLE_PROXY_PUBLIC_HOST to that server's domain/IP
#    - Example: CONSOLE_PROXY_PUBLIC_HOST=console.yourdomain.com

# Enable/disable console proxy feature
# Set to false if you cannot run the console-proxy server
CONSOLE_PROXY_ENABLED=true

# Internal host where console-proxy is running (usually 127.0.0.1)
CONSOLE_PROXY_HOST=127.0.0.1

# Port for console proxy (handles both VNC and SSH)
CONSOLE_PROXY_PORT=6080

# Public host for client WebSocket connections
# - Leave empty to use APP_URL host (requires reverse proxy on same server)
# - Set to external domain/IP if console-proxy runs on different server
# - Example: console.yourdomain.com or 123.456.789.0
CONSOLE_PROXY_PUBLIC_HOST=

# Use SSL/WSS for WebSocket connections (recommended for production)
CONSOLE_PROXY_SSL=true

# Connection timeout in seconds
CONSOLE_CONNECTION_TIMEOUT=30

# Idle timeout before disconnection (seconds)
CONSOLE_IDLE_TIMEOUT=1800

# VNC quality (1-9, higher = better quality)
CONSOLE_VNC_QUALITY=6

# VNC compression level (0-9)
CONSOLE_VNC_COMPRESSION=2

# SSH terminal type
CONSOLE_SSH_TERM=xterm-256color

# SSH default terminal size
CONSOLE_SSH_COLS=80
CONSOLE_SSH_ROWS=24